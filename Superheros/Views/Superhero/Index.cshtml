@model IEnumerable<Superheros.Models.Superhero>

@{
    ViewData["Title"] = "Index";
}


<p>
    <div class="container p-3">
        <div class="row pt-4">
            <h2 class="text-primary">Index: Superhero Lists</h2>
        </div>
        <div class="col=6 text-right">
            <a asp-controller="Superhero" asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ego)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catchphrase)
            </th>
            <th>Changes</th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ego)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catchphrase)
            </td>
            <td>
                <div class="w-100 btn-group" role="group">
                    <a asp-controller="Superhero" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-1">Edit</a>
                    <a asp-controller="Superhero" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
